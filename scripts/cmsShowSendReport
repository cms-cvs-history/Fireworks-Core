#!/usr/bin/env bash

if [ $# -ne 1 ]; then 
   echo "Usage: sendCmsShowReport <crash-report>"
   exit
fi

# Send crash report as UDP package. Create intermediate zip file
# else nc command failes with using option -w0.

creport=$1;
export fz=`mktemp ${creport}-XXX`.gz
gzip -c $creport > $fz

cat $fz | nc -u -w0 169.228.130.91 9699 

echo "Report has been sended."
